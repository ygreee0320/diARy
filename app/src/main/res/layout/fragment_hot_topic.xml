<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotTopicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="핫토픽 - "
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/topic_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/diary_1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:id="@+id/img_1"
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#80BFBFBF"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:id="@+id/diary_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일기1"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="15dp"/>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/diary_2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:id="@+id/img_2"
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#80BFBFBF"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:id="@+id/diary_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일기2"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:paddingBottom="15dp" />
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/diary_3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:id="@+id/img_3"
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#80BFBFBF"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:id="@+id/diary_title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일기3"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:paddingBottom="15dp" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!--  핫토픽 목록 (리사이클러 뷰)  -->
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/hotRecyclerView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="180dp"-->
<!--            android:padding="5dp"-->
<!--            android:layout_marginTop="10dp" />-->

    </LinearLayout>

</FrameLayout>